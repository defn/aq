#!/usr/bin/env bash

function main {
  local shome="${_defn_home_home:-"$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"}"
  source "$shome/script/profile"

  if [[ "$#" == 0 ]]; then
    echo "syntax nm_resource jq_query_args..." 1>&2
    return 0
  fi

  local nm_resource="$1"; shift

  if [[ "$#" == 0 ]]; then
    set -- .
  fi

  aq cat "$nm_resource" | jq -r -S "$@"
}

source sub-chain "$BASH_SOURCE" "$@"
